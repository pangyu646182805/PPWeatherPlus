<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_widget_horizontal_height"
    android:background="#00000000"
    android:paddingLeft="@dimen/x32"
    android:paddingRight="@dimen/x32"
    tools:background="#333333">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="42sp"/>

        <TextView
            android:id="@+id/tv_meta_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y12"
            android:text="1月1号 周一"
            android:textColor="@color/white"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_weather_icon"
            android:layout_width="@dimen/x88"
            android:layout_height="@dimen/y88"
            android:src="@mipmap/fifteen_weather_sunny"/>

        <TextView
            android:id="@+id/tv_weather_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y12"
            android:text="_ 0° 优质"
            android:textColor="@color/white"
            android:textSize="13sp"/>
    </LinearLayout>
</RelativeLayout>