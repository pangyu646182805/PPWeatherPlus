<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/md_blue_300">

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/y8"
        android:paddingTop="@dimen/y8">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x32"
            android:paddingRight="@dimen/x32">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.ppyy.ppweatherplus.widget.NoPaddingTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                    <com.ppyy.ppweatherplus.widget.AqiWidget
                        android:id="@+id/aqi_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"/>
                </LinearLayout>

                <com.ppyy.ppweatherplus.widget.NoPaddingTextView
                    android:id="@+id/tv_weather_desc_0"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="--"
                    android:textColor="@color/white_c"
                    android:textSize="12sp"
                    tools:text="雷阵雨"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_weather_icon_0"
                    android:layout_width="@dimen/x48"
                    android:layout_height="@dimen/y48"
                    tools:background="@mipmap/fifteen_weather_chancestorm"/>

                <com.ppyy.ppweatherplus.widget.NoPaddingTextView
                    android:id="@+id/tv_temp_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-/-℃"
                    android:textColor="@color/white_c"
                    android:textSize="12sp"
                    tools:text="34/26℃"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x32"
            android:paddingRight="@dimen/x32">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.ppyy.ppweatherplus.widget.NoPaddingTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="明天"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                    <com.ppyy.ppweatherplus.widget.AqiWidget
                        android:id="@+id/aqi_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"/>
                </LinearLayout>

                <com.ppyy.ppweatherplus.widget.NoPaddingTextView
                    android:id="@+id/tv_weather_desc_1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="--"
                    android:textColor="@color/white_c"
                    android:textSize="12sp"
                    tools:text="多云"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_weather_icon_1"
                    android:layout_width="@dimen/x48"
                    android:layout_height="@dimen/y48"
                    tools:background="@mipmap/fifteen_weather_cloudy"/>

                <com.ppyy.ppweatherplus.widget.NoPaddingTextView
                    android:id="@+id/tv_temp_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-/-℃"
                    android:textColor="@color/white_c"
                    android:textSize="12sp"
                    tools:text="35/27℃"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_marginBottom="@dimen/y48"
        android:layout_marginLeft="@dimen/x32"
        android:orientation="horizontal">

        <com.ppyy.ppweatherplus.widget.NoPaddingTextView
            android:id="@+id/tv_current_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:padding="0dp"
            android:text="34"
            android:textColor="@color/white"
            android:textSize="100sp"
            tools:text="34"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/x16"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y24"
            android:paddingTop="@dimen/y24">

            <View
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y24"
                android:background="@mipmap/ic_weather_du"
                android:backgroundTint="@color/white"/>

            <com.ppyy.ppweatherplus.widget.NoPaddingTextView
                android:id="@+id/tv_weather_desc"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="晴"
                android:textColor="@color/white"
                android:textSize="18sp"
                tools:text="晴"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>