<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ppyy.ppweatherplus.widget.NoPaddingTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x32"
        android:paddingBottom="@dimen/y16"
        android:paddingTop="@dimen/y16"
        android:text="@string/sunrise_and_sunset"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <com.ppyy.ppweatherplus.widget.SunriseAndSunsetView
        android:id="@+id/sunrise_and_sunset_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y360"/>
</LinearLayout>